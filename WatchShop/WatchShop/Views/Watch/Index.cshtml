@model List<WatchOrder>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Order list</h1>

@if(Model.Count > 0)
{
    <table class="table">
        <tr>
            <th>Watch ordered</th>
            <th>First name</th>
            <th>Surname</th>
            <th>City</th>
            <th>Street address</th>
            <th>Zip code</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Watch</td>
                <td>@item.FirstName</td>
                <td>@item.Surname</td>
                <td>@item.City</td>
                <td>@item.StreetAddress</td>
                <td>@item.ZipCode</td>
                <td>@item.Phone</td>
                <td>
                    <a class="btn btn-primary"
                       asp-action="Edit"
                       asp-controller="Watch"
                       asp-route-id=@item.Id>Edit</a>
                    <a class="btn btn-primary"
                       asp-action="Details"
                       asp-controller="Watch"
                       asp-route-id=@item.Id>Details</a>
                    <a class="btn btn-primary"
                       asp-action="Delete"
                       asp-controller="Watch"
                       asp-route-id=@item.Id>Delete</a>
                </td>
            </tr>
        }
    </table>
}